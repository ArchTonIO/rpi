#!/usr/bin/env bash

function print_help {
cat <<EOF
Description here
etc
EOF
}
 

case $1 in
    h) print_help ; exit ;;
esac

DEV=/dev/ttyACM0
if [ ! -e $DEV ]; then
	DEV=/dev/ttyUSB0
fi
DEV=/dev/ttyUSB0

# --omap arg below converts \r to \r\n for better outputting on console
picocom -b 115200 $DEV --omap crcrlf
